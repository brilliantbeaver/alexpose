# API Keys - Replace with your actual keys
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# AlexPose Configuration
ALEXPOSE_CONFIG_DIR=config
ALEXPOSE_DATA_DIR=data
ALEXPOSE_LOGS_DIR=logs

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-5.2
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LLM_MULTIMODAL_ENABLED=true

# Pose Estimation Configuration
DEFAULT_POSE_ESTIMATOR=mediapipe
POSE_CONFIDENCE_THRESHOLD=0.5

# Video Processing Configuration
MAX_VIDEO_SIZE_MB=500
DEFAULT_FRAME_RATE=30.0
FFMPEG_ENABLED=true

# Classification Configuration
NORMAL_ABNORMAL_THRESHOLD=0.7
CONDITION_CONFIDENCE_THRESHOLD=0.6
FALLBACK_TO_GEMINI=true

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# Security Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production
ENCRYPTION_ENABLED=false
RATE_LIMITING_ENABLED=false

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./data/alexpose.db
REDIS_URL=redis://localhost:6379/0

# Background Tasks Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
BACKGROUND_TASKS_ENABLED=true

# YouTube Configuration
YOUTUBE_ENABLED=true
YOUTUBE_DOWNLOAD_DIR=data/youtube
YOUTUBE_QUALITY=best[height<=720]
YOUTUBE_FORMAT=mp4

# Development Configuration
USE_SAMPLE_DATA=false
SAMPLE_DATA_DIR=data/samples
AUTO_RELOAD=true

# Performance Configuration
MAX_MEMORY_USAGE_MB=2048
MAX_WORKERS=4
CACHE_TTL_SECONDS=3600